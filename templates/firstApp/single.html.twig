{% extends "base.html.twig" %}
{% block title %} Accueil {% endblock %}
{% block main %}
<h2>Article numéros {{(article.id)-1}} </h2>
<div class="card my-3">
    <div class="card-body">
        <h5 class="card-title">{{article.titre}}</h5>
        <p class="card-text">{{article.contenu}}<p>
        <p class="card-text">écrit par {{article.nomAuteurAssocie}}<p>
        <p class="card-text">{{article.nombreVues}} vues<p>
        <p class="card-text">posté le : {{date}}<p>
    </div>
</div>
{% endblock %}