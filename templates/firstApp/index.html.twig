{% extends "base.html.twig" %}
{% block title %} Accueil {% endblock %}
{% block main %}
<h2>Les articles disponnible</h2>
{% for article in articles %}
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">{{article.titre}}</h5>
                <p class="card-text">{{article.nomAuteurAssocie}}<p>
                <a href="{{ path('single',{'id':article.id}) }}" class="btn btn-secondary">Voir</a>
            </div>
        </div>
{% endfor %}
{% endblock %}